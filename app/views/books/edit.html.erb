<%= notice %>

<div class="container">

  <div class="row">
	  <div class="col-md-6 col-md-offset-3">
  		<h1>Editing Book</h1>

      <%= form_for(@book) do |f| %>
      <% if@book.errors.any? %>
              <%= @book.errors.count %>件のerrorが発生しました
                <% @book.errors.full_messages.each do |message| %>
                  <%= message %>
              <% end %>
            <% end %>

      <div class="field row">
        <h4>Title</h4>
         <div><%= f.text_field :title, class: "col-xs-12 book_title" %></div>
      </div>

      <div class="field row">
        <h4>Opinion</h4>
        <div>
          <%= f.text_area :body, class: "col-xs-12 book_body" %>
        </div>
      </div>

      <div class="actions row">
          <div>
            <%= f.submit "Update book", class: "btn btn-primary col-xs-12" %>
            </div>
        <% end %>

          <div>
            <%= link_to "Show", book_path(@book.id) %>
            <%= link_to "Back", books_path %>
          </div>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
</div>