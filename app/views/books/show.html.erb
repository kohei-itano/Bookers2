<%= notice %>

<div class="container">
        <!-- <p id="notice"></p> -->
  <div class="row">
  	<div class="col-xs-3">
    	<h2>User info</h2>
    		<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
    		<table class="table">
	      	<tbody>
		      	<tr>
		    	  	<th>name</th>
		    	  	<th><%= @user.name %></th>
		      	</tr>
		      	<tr>
		    	  	<th>introduction</th>
		    	  	<th><%= @user.introduction %></th>
		      	</tr>
					</tbody>
				</table>
          <% if @book.user == current_user %>
					<%= link_to "", edit_user_path(@user), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench edit' %>
          <% else %>
          <%= link_to "", user_path(current_user), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench edit' %>
          <% end %>
			    <h2>New book</h2>
			  	<%= form_for(@bookn) do |f| %>

    				<h4>Title</h4>
    				<%= f.text_field :title %>

    				<h4>Opinion</h4>
    				<%= f.text_area :body %>
						<%= f.submit "Create book", class: 'btn btn-primary col-xs-12' %>
    			<% end %>
			</div>
			<div class="col-xs-9">
    		<h2>Book detail</h2>
    		<table class="table table-hover table-inverse">
  					<thead>
    					<tr>
      					<th></th>
      					<th></th>
      					<th></th>
      					<th colspan="3"></th>
    					</tr>
  					</thead>
  				<tbody>
  					<tr>
  							<td>
  								<%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
                  <%= link_to user_path(@user) do %>
  								<%= @user.name %></td>
                  <% end %>
  							<td>
  								<%= link_to book_path(@book.id) do %>
  								<%= @book.title %>
  								<% end %>
  							</td>
  							<td><%= @book.body %></td>
                <% if @book.user == current_user %>
  							<td><%= link_to "edit", edit_book_path %></td>
  							<td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "Are you sureï¼Ÿ"} %></td>
  							<% end %>
  					</tr>
  				</tbody>
				</table>
  		</div>
	</div>
</div>
